# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2

[*.{toml,cfg,ini}]
indent_size = 4

[*.{md,rst}]
trim_trailing_whitespace = false
indent_size = 2

[*.sh]
indent_size = 2

[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

[Dockerfile*]
indent_size = 2