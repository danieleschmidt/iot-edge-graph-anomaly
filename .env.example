# IoT Edge Graph Anomaly Detection - Environment Configuration

# ── CORE APPLICATION ──
APP_NAME=iot-edge-graph-anomaly
APP_VERSION=0.1.0
LOG_LEVEL=INFO
DEBUG=false

# ── MODEL CONFIGURATION ──
MODEL_PATH=./models/lstm_autoencoder.pth
SEQUENCE_LENGTH=10
HIDDEN_SIZE=64
NUM_LAYERS=2
DROPOUT_RATE=0.2
LEARNING_RATE=0.001
BATCH_SIZE=32
EPOCHS=100

# ── ANOMALY DETECTION ──
ANOMALY_THRESHOLD=0.5
DETECTION_WINDOW=60
ALERT_COOLDOWN=300

# ── DATA PROCESSING ──
DATA_PATH=./data/
DATASET_TYPE=swat
TRAIN_SPLIT=0.7
VAL_SPLIT=0.15
TEST_SPLIT=0.15
NORMALIZATION_METHOD=standard

# ── MONITORING & OBSERVABILITY ──
OTLP_ENDPOINT=http://localhost:4317
OTLP_HEADERS=
METRICS_INTERVAL=30
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=8080

# ── EDGE DEPLOYMENT ──
DEVICE_ID=edge-device-001
REGION=us-west-2
MEMORY_LIMIT=100M
CPU_LIMIT=0.25
STORAGE_LIMIT=1G

# ── SECURITY ──
API_KEY=
JWT_SECRET=
ENCRYPTION_KEY=
TLS_ENABLED=true
CERT_PATH=./certs/

# ── NETWORKING ──
HOST=0.0.0.0
PORT=8000
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=iot/sensors/data

# ── DOCKER & CONTAINERS ──
DOCKER_REGISTRY=
IMAGE_TAG=latest
CONTAINER_NAME=iot-edge-anomaly
RESTART_POLICY=unless-stopped

# ── DEVELOPMENT ──
DEV_MODE=false
MOCK_DATA=false
PROFILING_ENABLED=false
TEST_DATABASE_URL=sqlite:///test.db