# IoT Edge Anomaly Detection Configuration

# Model Configuration
MODEL_PATH=models/lstm_gnn_hybrid.pth
DEVICE=cpu
BATCH_SIZE=32
WINDOW_SIZE=50
THRESHOLD=0.5

# Data Configuration
DATA_PATH=data/swat
GRAPH_TOPOLOGY_PATH=config/sensor_topology.yaml
PREPROCESSING_CONFIG=config/preprocessing.yaml

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=8080
PROMETHEUS_ENDPOINT=http://localhost:9090
OTLP_ENDPOINT=http://localhost:4317
SERVICE_NAME=iot-edge-anomaly-detector
SERVICE_VERSION=0.1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/anomaly_detector.log

# Security Configuration
API_KEY_FILE=/run/secrets/api_key
TLS_CERT_PATH=/etc/ssl/certs
TLS_KEY_PATH=/etc/ssl/private
ENABLE_TLS=false

# Resource Limits
MAX_MEMORY_MB=100
MAX_CPU_PERCENT=25
INFERENCE_TIMEOUT_MS=100

# Edge Device Configuration
DEVICE_ID=edge-device-001
DEPLOYMENT_ENVIRONMENT=production
UPDATE_CHECK_INTERVAL=3600
OTA_REGISTRY_URL=registry.example.com/iot-edge-anomaly

# Database Configuration (Optional)
DATABASE_URL=sqlite:///data/anomaly_logs.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30

# Development Configuration
DEBUG=false
PROFILING_ENABLED=false
TEST_DATA_PATH=tests/fixtures
MOCK_SENSORS=false